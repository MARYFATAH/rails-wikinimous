<div class="mb-3 m-5 p-3">
<%= form_with model: @article do |f|  %>
  <%= f.label :title, input_html: { class: "form-label" } %>
  <%= f.text_field :title, input_html: { class: "form-text" } %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit input_html: { class: "btn btn-primary" } %>
<% end %>
</div>
